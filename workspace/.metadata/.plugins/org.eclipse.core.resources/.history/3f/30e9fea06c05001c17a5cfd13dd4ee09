package ch07;

public class Hero {
	
	private String name;
	private int hp;
	private int power;

	public Hero(String name, int hp, int power) {
		this.name = name;
		this.hp = hp;
		this.power = power;
	}
	
	
	
	// getter, setter
	// getter - read only
	public String getName() {
		return this.name;
	}
	public int getHp() {
		return this.hp;
	}	
	public int getPower() {
		return this.power;
	}
	
	// setter
	public void setName() {
		this.name = setName;
		
	}
	

}
