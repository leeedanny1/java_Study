package ch04;

public class Student {

	String name;
	int money;
	
	public Student(String name, int money) {
		this.name = name;
		this.money = money;
	}
	
	//메소드
	public void showInfo() {
		System.out.println(name + " 님의 남은 돈은: " + money);		
	}
	
	// 학생이 버스를 탄다.
	public void takeBus(Bus bus) {
		bus.take(1000);
	}
}
